<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:LaFokinCabra"
             x:Class="LaFokinCabra.App">
    <Application.Resources>
        <!-- Colores base -->
        <Color x:Key="BgCard">#F1F5F9</Color>
        <Color x:Key="Primary">#2563EB</Color>
        <Color x:Key="TextMuted">#556070</Color>

        <!-- Estilos -->
        <Style TargetType="Label">
            <Setter Property="FontFamily" Value="OpenSansRegular" />
            <Setter Property="TextColor" Value="Black" />
        </Style>

        <Style TargetType="Frame" x:Key="Card">
            <Setter Property="Padding" Value="16" />
            <Setter Property="CornerRadius" Value="16" />
            <Setter Property="BackgroundColor" Value="{StaticResource BgCard}" />
            <Setter Property="HasShadow" Value="True" />
            <Setter Property="Margin" Value="0,4" />
        </Style>

        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="OpenSansSemibold"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="12,10"/>
        </Style>
    </Application.Resources>
</Application>
